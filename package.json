{
  "name": "tg-inspiration-bot",
  "version": "13.0.0",
  "description": "Telegram bot with Mini App for inspiration workshop - Secure JavaScript Version",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node --max-old-space-size=4096 server.js",
    "dev": "nodemon --max-old-space-size=4096 server.js",
    "start:prod": "NODE_ENV=production node --max-old-space-size=8192 server.js",
    "start:memory": "node --max-old-space-size=8192 --max-semi-space-size=1024 server.js",
    "restart": "pkill -f \"node server.js\" || true && sleep 2 && node --max-old-space-size=4096 server.js",
    "force-restart": "fuser -k 3000/tcp || true && sleep 2 && node --max-old-space-size=4096 server.js",
    "status": "ps aux | grep \"node server.js\" || echo \"Сервер не запущен\"",
    "test": "echo \"No tests specified\" && exit 0",
    "deploy": "node --max-old-space-size=8192 server.js",
    "db:init": "node -e \"import('./server.js').then(() => console.log('Database initialized'))\"",
    "memory:test": "node --max-old-space-size=8192 --trace-gc server.js",
    "monitor": "node --max-old-space-size=4096 --inspect server.js"
  },
  "dependencies": {
    "express": "^4.19.2",
    "node-telegram-bot-api": "^0.64.0",
    "cors": "^2.8.5",
    "body-parser": "^2.0.1",
    "dotenv": "^16.4.5",
    "uuid": "^10.0.0",
    "multer": "^2.0.0",
    "sharp": "^0.33.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.7",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.1.4"
  },
  "keywords": [
    "telegram",
    "bot",
    "mini-app",
    "javascript",
    "inspiration"
  ],
  "author": "Мастерская Вдохновения",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
